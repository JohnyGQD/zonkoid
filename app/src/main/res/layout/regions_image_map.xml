<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auto_invest_income"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:columnCount="3"
    android:stretchColumns="1,2">
    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/ic_region_select" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:layout_span="2"
            android:text="@string/region_headline"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </TableRow>

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_span="2"
            android:text="@string/autoinvest_regions_desc" />
    </TableRow>

    <TableRow>
        <HorizontalScrollView
            android:layout_span="3"
            android:layout_marginTop="-150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/account_food_scroll"
            android:foregroundGravity="top"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="634dp"
                android:id="@+id/account_food_layout"
                android:gravity="top">
                <com.zechassault.zonemap.view.ImageMapView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="634dp"
                    android:scaleType="centerInside"
                    android:id="@+id/imageMapViewFront"
                    android:src="@drawable/regions_map_base" />
            </LinearLayout>
        </HorizontalScrollView>
    </TableRow>

</TableLayout>