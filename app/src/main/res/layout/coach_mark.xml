<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/coach_mark_master_view">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
        >
        <TextView
                android:id="@+id/whatsnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtr pro autoinvest"
                android:textSize="20sp"
                android:textColor="@color/greyDark"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_margin="3dp"
                android:padding="3dp"
        />

        <ImageView
            android:id="@+id/icon_filter"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_below="@id/whatsnew"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_autoinvest" />

        <TextView
            android:id="@+id/maintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coachmark_text"
            android:layout_below="@id/icon_filter"
            android:textColor="@color/greyDark"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_margin="3dp"
            android:padding="3dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maintext"
            android:gravity="center_horizontal"
            android:padding="10dp"
            >

            <Button
                android:id="@+id/settings_autoinvest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/autoinvest_settings_button_coachmark_text"
                android:theme="@style/AppTheme.ZonkoidButtonCancel"
                />

            <Button
                android:id="@+id/zavrit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/close"
                android:theme="@style/AppTheme.ZonkoidButton"
                />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>