<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/coach_mark_master_view">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
        >
        <TextView
                android:id="@+id/warningHeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/greyDark"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_margin="3dp"
                android:padding="3dp"
        />
        <TextView
            android:id="@+id/warningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/warningHeadline"
            android:textColor="@color/greyDark"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/warningText"
            android:gravity="center_horizontal"
            android:padding="10dp"
            >

            <Button
                android:id="@+id/doAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.ZonkoidButton"
                />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>