<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dip">

    <ImageView
        android:id="@+id/filler"
        android:layout_width="3dip"
        android:layout_height="match_parent"
        android:layout_marginEnd="6dip"
        android:layout_marginRight="6dip"
        android:background="@color/white" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        >

        <TableRow>
            <TextView
                android:id="@+id/loanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Pujcka s docela dlouhym "
                android:layout_span="3"
                android:maxLines="2"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"
                />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="6dp"
                android:paddingEnd="6dp"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="PO SPLATNOSTI" />

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/investedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginRight="6dp"
                android:text="Investováno" />

            <TextView
                android:id="@+id/invested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="5 234,-Kč" />

            <TextView
                android:id="@+id/interestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginRight="6dp"
                android:text="Úrok" />

            <TextView
                android:id="@+id/interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="343,78 Kč" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/returnedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginRight="6dp"
                android:text="Vráceno" />

            <TextView
                android:id="@+id/returned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="1 234,-Kč" />

            <TextView
                android:id="@+id/dueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginRight="6dp"
                android:text="Po splatnosti" />

            <TextView
                android:id="@+id/due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="343,78 Kč" />
        </TableRow>

        <TableRow>
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:id="@+id/progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100000"
                android:progress="56000"
                android:maxHeight="2sp"
                android:layout_span="4"
            />
        </TableRow>
    </TableLayout>


</LinearLayout>